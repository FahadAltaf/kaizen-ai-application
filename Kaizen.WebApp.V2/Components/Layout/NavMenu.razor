@code {
    private string? currentUrl;

    protected override void OnInitialized()
    {
        currentUrl = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        NavigationManager.LocationChanged += OnLocationChanged;
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        currentUrl = NavigationManager.ToBaseRelativePath(e.Location);
        StateHasChanged();
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }

    public string SelectedMenu { get; set; } = "dashboard";

    async Task onMenuItemClicked(string menu)
    {
        SelectedMenu = menu;
        switch (menu)
        {
            case "leasing":
                NavigationManager.NavigateTo("/leasing");
                break;
            case "dashboard":
                NavigationManager.NavigateTo("/dashboard");
                break;
            case "reports":
                NavigationManager.NavigateTo("/reports");
                break;
            case "prospects":
                NavigationManager.NavigateTo("/prospects");
                break;
            case "accounts":
                NavigationManager.NavigateTo("/accounts");
                break;
            case "conversations":
                NavigationManager.NavigateTo("/conversations/asst_CkXRdKynHfveoZ22Pg4gfQuw");
                break;
            default:
                break;
        }
        StateHasChanged();
        await Task.CompletedTask;
    }

    public void UpdateProperty(string newValue)
    {
        SelectedMenu = newValue;
        StateHasChanged(); // Notify Blazor that the component needs to be re-rendered
    }
}

